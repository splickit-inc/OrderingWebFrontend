<div class='sign-in' data-dialog-content>
    {{#if with_login}}
    <form action='/sessions?continue={{continueUrl}}' method='post'>
    {{else}}
    <form action='{{ window.sign_in_url }}' method='post'>
    {{/if}}
    <input type="hidden" name="dialog" value="1">
    <a class="button facebook-btn" onclick="facebookLogin()" style="margin-top: 0">
        <div>
          <span class="fb-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 216 216" color="#ffffff">
            <path fill="#ffffff" d="M204.1 0H11.9C5.3 0 0 5.3 0 11.9v192.2c0 6.6 5.3 11.9 11.9
            11.9h103.5v-83.6H87.2V99.8h28.1v-24c0-27.9 17-43.1 41.9-43.1
            11.9 0 22.2.9 25.2 1.3v29.2h-17.3c-13.5 0-16.2 6.4-16.2
            15.9v20.8h32.3l-4.2 32.6h-28V216h55c6.6 0 11.9-5.3
            11.9-11.9V11.9C216 5.3 210.7 0 204.1 0z"></path>
            </svg>
          </span>
            <span class="fb-text">Sign in with Facebook</span>
        </div>
    </a>
    <div class="or-center">
        <hr/>
        <label>OR</label>
        <hr/>
    </div>
    <input type='email' name='user[email]' id='user_email'
           placeholder="Email Address">
    <input type='password' name='user[password]' id='user_password'
           class="last-input" placeholder="Password">

    <br>
    <div id="custom_textbox">
        <div class="custom_align_left checkbox-container checkbox-group-common go">
            <label class="selector-override">
                <input class="checkbox-group-order" type="checkbox" name="user[remember]" id="user_remember">
                <span></span>
            </label>

            <span>Remember Me</span>
        </div>

        <div class="custom_align_right">
            <a class="custom_span" href='/request_email'>Forgot password?</a>
        </div>
    </div>

    <input id="submit-test" type='submit' value="Sign In">
</form>
    {{#if withoutGuest}}
        <div class="or-center">
        </div>
    {{else}}
        <div class="or-center">
            <hr>
            <label>OR</label>
            <hr>
        </div>
        {{#if continueUrl}}
            <p><a class="button secondary last-btn" href="/guests/sign_up?continue={{continueUrl}}">Continue as Guest</a></p>
        {{else}}
            <p><a class="button secondary last-btn" href="/guests/sign_up">Continue as Guest</a></p>
        {{/if}}
    {{/if}}
</div>
