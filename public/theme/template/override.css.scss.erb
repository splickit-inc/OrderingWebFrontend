body {
  .logo {
    &.logo-loyalty {
      background-image: url($loyalty-logo-url);
    }

    /*&.logo-app {
      background-image: url($app-logo-url);
    }*/
  }

  .loyalty-card-bg {
    background-color: $loyalty-behind-card-bg;
    @media (min-width: 43.5rem) {
      background-color: transparent;
    }
  }

  .badge {
    background-color: $primary-button-color;
    color: $primary-button-text-color;
  }

  .loyalty-card {
    background-color: $primary-bg-color;
  }

  .loyalty-group {
    .link,
    .manage {
      border-right: 0.1rem solid transparent;
      @media (min-width: 40rem) {
        border-right: 0.1rem solid $separator-color;
      }
    }
  }

  background-color: $primary-bg-color;

  input[type=submit], button, .button {
    background-color: $primary-button-color;
    color: $primary-button-text-color;

    &:active,
    &:hover {
      background: $primary-button-hover-color;
    }
  }

  .info-window {
    h3 {
      color: $info-window-dark-text-color;
    }
    p {
      color: $info-window-light-text-color;
    }
  }

  [data-dialog-element] .buttons button,
  [data-dialog-element] .buttons a, #buttons a.button.new, input.loading.new {
    background-color: $secondary-button-color;
    color: $secondary-button-text-color;
  }

  #sign-in,
  #sign-up {
    background-color: $primary-bg-color;
  }

  h1, h2, h3, h4, h5, h6 {
    color: $dark-text-color;
  }

  label {
    color: $dark-text-color;
  }

  a {
    color: $link-color;
  }

  header {
    background-color: $small-nav-bg-color;
    /*background-image: url($hero-image-url);*/

    &.open nav.primary {
      background-color: $small-nav-bg-color;

      a {
        border-top-color: $small-primary-nav-separator-color;
      }

    }
    .header_img{
      background-image: url($hero-image-url);
    }

    div.order::before {
      color: $bag-bg-color;
    }

    div.order::after {
      color: $bag-text-color;
    }

    div.order {
      a {
        span {
          color: $menu_nav_primary_item_text_color;
        }
      }
    }

    nav.primary {
      > a:not(.logo):not(.group-order-status) {
        color: $menu_nav_primary_item_text_color;
        position: relative;
      }
      .group-order-status{
        color: $menu_nav_primary_item_text_color;;

      }
      background-color: $footer-bg-color;
    }



    .dropdown-content {
      background-color: $primary_bg_color;
    }
    .dropdown-content a {
      color: $dark-text-color;
    }

    nav.secondary,
    nav.secondary.stacked {
      background-color: $menu-nav-bg-color;

      &::before {
        color: $menu-nav-item-text-color;
      }

      a {
        color: $menu-nav-item-text-color;
        background-color: $menu-nav-bg-color;

        &:hover {
          background-color: $menu-nav-item-hover-color;
        }
      }

      a:not(:first-child) {
        border-top-color: $small-secondary-nav-separator-color;
      }

    }

    nav.secondary {
      a.current {
        color: $menu-nav-item-selected-text-color;
        background-color: $primary-bg-color;
      }
    }

    nav.secondary.stacked {
      a.current {
        color: $menu-nav-item-text-color;
        background-color: $menu-nav-bg-color;
      }
    }
  }

  input[type=text],
  input[type=email],
  input[type=tel],
  input[type=password] {
    border: solid 1px $text-field-border-color;
  }

  input[type=radio]::before {
    background-color: $checkbox-unchecked-color;
  }

  input[type=checkbox]::before {
    background-color: $checkbox-unchecked-color;
  }

  p {
    color: $medium-text-color;
  }

  hr {
    border-top: solid 1px $separator-color;
  }

  [data-dialog-element]#add-to-order [data-dialog-footer] > *:last-child,
  [data-dialog-element]#my-order [data-dialog-footer] > *:last-child {
    background-color: $secondary-button-color;
    color: $secondary-button-text-color;
    &:active,
    &:enabled:hover {
      background-color: $secondary-button-hover-color;
    }
  }

  [data-dialog-element]#add-to-order [data-dialog-footer] .dialog-right {
    background: $primary-bg-color;
  }

  [data-dialog-element] [data-dialog-footer] button.submit-order,
  [data-dialog-element] [data-dialog-footer] button.add-to-group-order {
    background-color: $primary-button-color !important;
  }

  [data-dialog-element] [data-dialog-close]:before {
    color: $dark-text-color;
  }

  input[type=checkbox]:checked::before,
  input[type=radio]:checked::before {
    background-color: $checkbox-checked-color;
    border: 1px solid $checkbox-border-color;
  }

  [data-dialog-element] .buttons button.secondary-btn {
    background-color: $secondary-button-color;
    color: $secondary-button-text-color;

    &:hover,
    &:active {
      background-color: $secondary-button-hover-color;
    }
  }

  [data-dialog-element] .buttons button,
  [data-dialog-element] .buttons a {
    background-color: $secondary-button-color;
    color: $secondary-button-text-color;

    &:hover,
    &:active {
      background-color: $secondary-button-hover-color;
    }
  }

  [data-dialog-element] .buttons a.secondary-btn,
  input[type=checkbox]:checked::before,
  input[type=radio]:checked::before {
    background-color: $checkbox-checked-color;
    border: 1px solid $checkbox-border-color;

    &:active,
    &:hover {
      background-color: $checkbox-checked-color;
    }
  }

  footer {
    color: $footer-text-color;
    background-color: $footer-bg-color;
    border-top: 1px solid $footer-top-separator-color;

    .footer-top {
      border-bottom: 1px solid $separator-color;

      a.logo.logo-large {
        background-color: $menu-nav-bg-color;
      }

      .side-text {
        p,
        a {
          color: inherit;
        }
      }

    }

    p {
      color: rgba($footer-text-color, .5);
    }

    a {
      color: $footer-text-color;
    }

  }

}

